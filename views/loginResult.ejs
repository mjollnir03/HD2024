<!-- loginResult.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Result</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body>
<% if (userFound) { %>
    <h1>We found your account, you will be logged in for this session.</h1>
    <h1>Happy Shopping!</h1>
    <h2>Redirecting you to the shop...</h2>
    <script>
        setTimeout(function() {
            window.location.href = '/shop.html';
        }, 5000); // 5000 milliseconds = 5 seconds
    </script>
<% } else { %>
    <h1>We couldn't find any account with the provided Email and Password</h1>
    <h2>Try Creating an account, or sign in with a different Email and Password</h2>
    <h2>Redirecting you to the account page...</h2>
    <script>
        setTimeout(function() {
            window.location.href = '/account.html';
        }, 5000); // 5000 milliseconds = 5 seconds
    </script>
<% } %>
</body>
</html>